# =============================================================================
# MOODZ - Environment Variables Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!
# =============================================================================

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://moodz:moodz_dev@localhost:5432/moodz?schema=public"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# Secret key for signing JWTs - generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# =============================================================================
# VIDEO CONFERENCING (Daily.co)
# =============================================================================
# Daily.co API credentials - https://dashboard.daily.co/developers
DAILY_API_KEY="your-daily-api-key"
DAILY_DOMAIN="your-domain.daily.co"

# =============================================================================
# REAL-TIME MESSAGING (Pusher)
# =============================================================================
# Pusher credentials - https://dashboard.pusher.com/
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_SECRET="your-pusher-secret"
NEXT_PUBLIC_PUSHER_KEY="your-pusher-public-key"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"

# =============================================================================
# EMAIL SERVICE (Resend)
# =============================================================================
# Resend API key - https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Email sender address (must be verified in Resend)
EMAIL_FROM="Moodz <notificacoes@moodz.com>"

# =============================================================================
# PUSH NOTIFICATIONS (Web Push / VAPID)
# =============================================================================
# Generate VAPID keys with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# =============================================================================
# CRON JOBS / SCHEDULED TASKS
# =============================================================================
# Secret for authenticating cron job requests - generate with: openssl rand -hex 32
CRON_SECRET="your-cron-secret-generate-with-openssl-rand-hex-32"

# =============================================================================
# CACHING (Redis - Optional)
# =============================================================================
# Redis connection URL for caching and rate limiting
REDIS_URL="redis://localhost:6379"

# =============================================================================
# FILE STORAGE (S3-Compatible - Optional)
# =============================================================================
# AWS S3 or compatible storage (Cloudflare R2, MinIO, etc.)
S3_BUCKET=""
S3_REGION=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_ENDPOINT=""  # For S3-compatible services like R2 or MinIO

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Sentry for error tracking - https://sentry.io/
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# PostHog for product analytics - https://posthog.com/
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# Enable Service Worker in development (normally only enabled in production)
NEXT_PUBLIC_ENABLE_SW="false"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Node environment
NODE_ENV="development"

# Enable debug logging
DEBUG=""

# =============================================================================
# VERCEL DEPLOYMENT (Auto-populated by Vercel)
# =============================================================================
# These are automatically set by Vercel when deployed
# VERCEL_URL=""
# VERCEL_ENV=""
# VERCEL_GIT_COMMIT_SHA=""
