{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/session-reminders",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/streak-risk",
      "schedule": "0 20 * * *"
    },
    {
      "path": "/api/cron/weekly-summary",
      "schedule": "0 10 * * 0"
    },
    {
      "path": "/api/cron/cleanup-notifications",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/update-therapist-stats",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/check-session-status",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/notification-digest?type=daily",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/notification-digest?type=weekly",
      "schedule": "0 9 * * 1"
    }
  ]
}
